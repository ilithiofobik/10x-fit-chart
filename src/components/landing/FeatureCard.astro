---
import type { FeatureCardProps } from "./types";
import { 
  Keyboard, 
  BarChart3, 
  Dumbbell, 
  Monitor 
} from "lucide-react";

const { title, description, icon } = Astro.props as FeatureCardProps;

// Map icon name to actual icon component
const iconMap = {
  Keyboard,
  BarChart3,
  Dumbbell,
  Monitor,
};

const IconComponent = iconMap[icon as keyof typeof iconMap];
---

<div
  class="flex flex-col items-start gap-3 rounded-lg border border-border bg-card p-6 transition-colors hover:bg-accent/50"
>
  {IconComponent && (
    <div class="rounded-md bg-primary/10 p-2">
      <IconComponent className="size-6 text-primary" />
    </div>
  )}
  <div class="flex flex-col gap-2">
    <h3 class="text-lg font-semibold text-card-foreground">
      {title}
    </h3>
    <p class="text-sm text-muted-foreground leading-relaxed">
      {description}
    </p>
  </div>
</div>
