---
import type { FeatureGridProps } from "./types";
import FeatureCard from "./FeatureCard.astro";

const { features } = Astro.props as FeatureGridProps;
---

<section class="w-full px-4 py-16 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="mb-12 text-center">
      <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">Dlaczego 10xFitChart?</h2>
      <p class="mt-4 text-lg text-muted-foreground">Wszystko czego potrzebujesz do śledzenia postępów treningowych</p>
    </div>

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
      {
        features.map((feature) => (
          <FeatureCard title={feature.title} description={feature.description} icon={feature.icon} />
        ))
      }
    </div>
  </div>
</section>
